<div class="contain-to-grid sticky">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li id="home" class="name"><%= link_to 'Seattle Alerts', root_path, id: "title" %></li>
      <li class="toggle-topbar menu-icon"><a id='toggle' href="#"><span></span></a></li>
    </ul>
    <div class="top-bar-section">
      <ul class="right">
        <% if signed_in? %>
          <li><%= link_to "My Alerts", subscriber_path(current_subscriber), id: "myalerts" %></li>
          <li><%= link_to "Account", edit_subscriber_path(current_subscriber), id: "account" %></li>
          <li><%= link_to "Sign Out", signout_path, method: "delete", id: "signout" %></li>
        <% else %>
          <li><%= link_to 'About', about_path, id: "about" %></li>
          <li><%= link_to 'Stay Informed', stayinformed_path, id: "stayinformed" %></li>
          <li><%= link_to "Sign In", signin_path, id: "signin" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>



